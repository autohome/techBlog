<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  
  {{#each comments as |comment| }}
    <div class="row mb-4  project">
      <div class="col-md-5 text-center">
        <p>{{comment.contents}}</p>
        <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
      </div>
    </div>
  {{/each}}

  {{#if logged_in}}
    <form class="new-comment-form">
      <textarea id="add-comment" placeholder="Add a comment" name="comment" rows="4" cols="50"></textarea>
      <br>
      <input type="submit" value="Submit">
    </form>
  {{else}}
    <p>Please log in to add a comment.</p>
  {{/if}}
</div>
<script src="../js/post.js"></script>